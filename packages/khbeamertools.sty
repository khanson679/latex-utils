\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{khbeamertools}
\RequirePackage{khcolor}

\colorlet{hla}{azure!90!black}
\colorlet{hlb}{redorange!90!black}
\colorlet{hlc}{green}
\colorlet{hld}{purple}
\colorlet{hle}{gold!90!black}
\colorlet{hl}{hla}

\newcommand<>{\semph}[1]{\textbf#2{#1}}
\newcommand<>{\demph}[1]{\textcolor#2{gray}{#1}}
\newcommand{\parheading}[1]{\textbf{\structure{#1}}}
\newcommand{\blockheading}[1]{\unskip\medskip\textbf{\structure{#1}}\par}

\newcommand{\hlfont}{\normalfont}
\newcommand<>{\hl}[1]{\alt#2{\textcolor{hl}{\hlfont #1}}{#1}}
\newcommand<>{\hla}[1]{\alt#2{\textcolor{hla}{\hlfont #1}}{#1}}
\newcommand<>{\hlb}[1]{\alt#2{\textcolor{hlb}{\hlfont #1}}{#1}}
\newcommand<>{\hlc}[1]{\alt#2{\textcolor{hlc}{\hlfont #1}}{#1}}
\newcommand<>{\hld}[1]{\alt#2{\textcolor{hld}{\hlfont #1}}{#1}}
\newcommand<>{\hle}[1]{\alt#2{\textcolor{hle}{\hlfont #1}}{#1}}
